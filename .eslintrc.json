{
    "plugins": ["prettier"],
    "extends": ["eslint:recommended", "plugin:prettier/recommended"],
    "env": {
      "es6": true,
      "browser": true,
      "jest/globals": true,
      "node": true 
    },
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module"
    },
    "rules": {
      "no-unused-vars": "warn"
    },
    "overrides": [
      {
        "files": ["**/*.test.js"],
        "plugins": ["jest"],
        "extends": ["plugin:jest/recommended"],
        "env": {
          "jest": true
        },
        "rules": { "jest/prefer-expect-assertions": "off" }
      }
    ]
  }